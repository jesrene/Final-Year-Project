<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizScreen"
    android:gravity="end"
    android:id="@+id/QuizScreen"
    android:orientation="vertical"
    style="@style/groupStylegray_50"
    android:background="@color/gray_50">

    <ImageView
        android:id="@+id/imageProfilePicture"
        android:layout_width="@dimen/_70pxh"
        android:layout_height="@dimen/_60pxh"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_310pxh"
        android:layout_marginTop="@dimen/_30pxv"
        android:layout_marginEnd="@dimen/_8pxh"
        android:src="@drawable/img_profilepic"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_profilepic" />

    <LinearLayout
        android:id="@+id/backToInformationSnippet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35pxh"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="onBackToSummaryClick">

        <ImageView
            android:layout_width="@dimen/_10pxh"
            android:layout_height="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_22pxh"
            android:src="@drawable/img_arrowleft" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="130dp"
            android:layout_height="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_6pxh"
            android:layout_marginTop="@dimen/_18pxh"
            android:text="Information Snippet"
            style="@style/txtWorkSansromanmedium22"
            android:textSize="@dimen/_12pxh" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearColumnarrowleft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backToInformationSnippet"
        android:layout_gravity="top|start"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtQuizTrivia"
            style="@style/txtWorkSansromansemibold32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/_6pxh"
            android:singleLine="true"
            android:text="@string/lbl_quiz_trivia" />

        <TextView
            android:id="@+id/total_question"
            style="@style/txtWorkSansromansemibold28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/_5pxh"
            android:singleLine="true"
            android:text="Total Questions"
            android:textColor="@color/gray_700" />

        <TextView
            android:id="@+id/question"
            style="@style/txtWorkSansromanmedium20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_40pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/_5pxh"
            android:text="Question" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ansA"
            style="@style/txtWorkSansromanmedium18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_40pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:background="@drawable/rectangle_bg_white_a700_border_black_900_23_radius_12"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_11pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_11pxv"
            android:text="@string/lbl_energy"
            android:textAllCaps="false"
            android:textColor="@color/gray_901"
            tools:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ansB"
            style="@style/txtWorkSansromanmedium18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:background="@drawable/rectangle_bg_white_a700_border_black_900_23_radius_12"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_11pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_11pxv"
            android:text="@string/lbl_protein"
            android:textAllCaps="false"
            android:textColor="@color/gray_901"
            tools:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ansC"
            style="@style/txtWorkSansromanmedium18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:background="@drawable/rectangle_bg_white_a700_border_black_900_23_radius_12"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_11pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_11pxv"
            android:text="@string/lbl_carbon_dioxide"
            android:textAllCaps="false"
            android:textColor="@color/gray_901"
            tools:text="C" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ansD"
            style="@style/txtWorkSansromanmedium18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:background="@drawable/rectangle_bg_white_a700_border_black_900_23_radius_12"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_11pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_11pxv"
            android:text="@string/lbl_vitamins"
            android:textAllCaps="false"
            android:textColor="@color/gray_901"
            tools:text="D" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_btn"
            style="@style/btnGradientRounded_1"
            android:layout_width="@dimen/_182pxh"
            android:layout_height="@dimen/_60pxv"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_68pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:ellipsize="end"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:singleLine="true"
            android:text="Next Question!"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>
