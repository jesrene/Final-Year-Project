<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoucherScreen"
    android:gravity="end"
    android:id="@+id/linearScoreScreen"
    android:orientation="vertical"
    style="@style/groupStylegray_50"
    android:background="@color/gray_50">

    <LinearLayout
        android:id="@+id/linearVoucher"
        style="@style/groupStylegray_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/backToRewards"
            android:layout_width="@dimen/_120pxh"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:layout_gravity="start"
            >

            <ImageView
                android:layout_width="@dimen/_10pxh"
                android:layout_height="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_22pxh"
                android:src="@drawable/img_arrowleft" />

            <TextView
                android:id="@+id/rewards"
                style="@style/txtWorkSansromanmedium22"
                android:layout_width="74dp"
                android:layout_height="@dimen/_18pxh"
                android:layout_marginStart="@dimen/_6pxh"
                android:layout_marginTop="@dimen/_18pxh"
                android:text="Rewards"
                android:textSize="@dimen/_12pxh" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            style="@style/groupStylegray_50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_marginTop="@dimen/_40pxh"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtVoucher"
                style="@style/txtWorkSansromansemibold32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_6pxh"
                android:singleLine="true"
                android:text="@string/lbl_voucher" />

            <TextView
                android:id="@+id/txtVictoryPoints"
                style="@style/txtWorkSansromansemibold28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_27pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:singleLine="true"
                android:text="@string/msg_victory_points" />

            <TextView
                android:id="@+id/txtVoucherCounter"
                style="@style/txtWorkSansromansemibold28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_9pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:singleLine="true"
                android:text="@string/lbl_voucher_2" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageProfilePicture"
        android:layout_width="@dimen/_70pxh"
        android:layout_height="@dimen/_60pxh"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_310pxh"
        android:layout_marginTop="@dimen/_30pxv"
        android:layout_marginEnd="@dimen/_8pxh"
        android:src="@drawable/img_profilepic"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_profilepic" />

    <ImageView
        android:id="@+id/imgVoucher"
        android:layout_width="396dp"
        android:layout_height="339dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_300pxh"
        android:src="@drawable/img_voucher"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_voucher" />

</RelativeLayout>
