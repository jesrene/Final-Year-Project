<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/>
            <corners android:radius="15dp"/>

        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_A700"/>
            <corners android:radius="15dp" />
            <stroke android:color="@color/gray" android:width="0.6dp" />

        </shape>
    </item>
</layer-list>
